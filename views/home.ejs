<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="bg-image" 
     style="background-image: url('https://source.unsplash.com/twukN12EN7c/1920x1080');
            height: 100vh">

    <%- include('partials/navbar.ejs') %>
   <center> <h1>Betamidi CMS</h1><br>
    <table class="table" style="max-width: 1100px;">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Code</th>
            <th scope="col">Location</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% data.forEach (el=> { %>
          <tr>
            <th scope="row"><%= el.id %></th>
            <td>
                <%= el.name %>
            </td>
            <td>
                <%= el.code %>
            </td>
            <td>
                <%= el.location %>
            </td>
            <td>
                <%= el.category %>
            </td>
            <td>
                <a href="/stores/<%= el.id %> "><button type="button" class="btn btn-outline-primary">Show Detail</button></a>
             </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
</body>
</html>